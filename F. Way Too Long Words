#include <bits/stdc++.h>
#include <string>
using namespace std;

int main()
{
    int n;
    cin >> n;
    for (int i = 1; i <= n; i++)
    {
        string s;
        cin>>s;     //dont use getline becuaase of multiple inputs right after the numbe rwe have to nake a string so it returns null then

        if (s.size() <= 10)
            cout <<s<<endl;
        else
        {
            cout << s[0] << s.size() - 2 << s[s.size() - 1]<<endl;
        }
    }

    return 0;
}


