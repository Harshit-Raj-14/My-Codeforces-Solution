#include<bits/stdc++.h>
#include <string>
using namespace std;

int main(){
    string str;
    cin>>str;

    long long sum=0;

    for (int i=0;i<str.length();i++){
        sum+=int(str[i]) - 48;
    }

    cout<<sum;

    return 0;
}

//The input is string.
But we cant now directly convert it into int.  Reason: The contriant is 10^6 and so we cannto covnert it into an integer. So, we change each index into a int by manipulation.
    
