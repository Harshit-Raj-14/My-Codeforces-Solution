import java.util.*;

public class now{
    public static void Palindrome(int arr[]){
        boolean isPa=true;
        for(int i=0;i<arr.length/2;i++){
            if(arr[i]!=arr[arr.length-i-1]) isPa=false;
        }
        if(isPa==false) System.out.println("NO");
        else System.out.println("YES");
    }

    public static void main(String args[]){
        Scanner sc=new Scanner(System.in);
        int n;
        n=sc.nextInt();
        int arr[] = new int[n];
        for(int i=0;i<n;i++){
            arr[i]=sc.nextInt();
        }
        Palindrome(arr);
    }
}


